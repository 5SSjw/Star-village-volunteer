/* pages/mine_collection_page/collection_page.wxss */
.title {
  background-color: #fff;
  color: #000;
  font-size: 35rpx;
  padding: 20rpx 20rpx 20rpx 40rpx;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #f6f6f6;
  position: relative;
}

.title::after {
  content: "";
  display: block;
  width: 6rpx;
  height: 20rpx;
  background-color: #93D5DC;
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -10rpx;
  z-index: 1;
}
.list{
  background: #ffffff;
  padding: 10rpx;
  display: flex;
  margin-top: 20rpx;
  border-radius: 4%;
}
.list-img image{
  width: 200rpx;
  height: 200rpx;
}

.list-info{
  padding-left: 20rpx;
  position: relative;
}

.activity_title{
  color: #93D5DC;
  font-size: 35rpx;
  margin-bottom: 14rpx;
}
.detail{
  font-size: 26rpx;
  color: #666666;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.detail-bottom{
  position: absolute;
  color: rgb(162, 201, 130);
  bottom: 2rpx;
  /* right: 20rpx; */
  font-size: 35rpx;
  flex: 1;
}