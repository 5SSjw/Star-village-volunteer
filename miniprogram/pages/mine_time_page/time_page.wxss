/* pages/time_page/time_page.wxss */
.info{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.grade_touxiang{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.grade_nicheng{
  font-size: 35rpx;
}

.bigFont{
  font-size: 50rpx;
  margin-top: 60rpx;
}

.timeLenColor{
  font-size: 100rpx;
  color: #93D5DC;
}

.white_block{
  margin: 2% 0% ;
  background-color: white;
  padding: 12rpx 15rpx;
  border-radius: 4%;
}

 .activityPhotos{
  margin-left: 25rpx;
  margin-top: 30rpx;
  width: 300rpx;
  height: 180rpx;
  border-radius: 4%;
}

.activityInfo{
  font-size: 25rpx;
  margin-bottom: 10%;
}

.activityDetail{
  height:70rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list{
  background: #ffffff;
  padding: 10rpx;
  display: flex;
  margin-top: 20rpx;
  border-radius: 4%;
}
.list-img image{
  width: 200rpx;
  height: 200rpx;
}

.list-info{
  padding-left: 20rpx;
  position: relative;
}
.title{
  color: #93D5DC;
  font-size: 35rpx;
  margin-bottom: 14rpx;
}
.info{
  font-size: 26rpx;
  color: #666666;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.info-bottom{
  position: absolute;
  color: rgb(255, 108, 108);
  bottom: 2rpx;
  right: 20rpx;
  font-size: 35rpx;
  flex: 1;
}

.end{
  color: #93D5DC;
  margin-top: 80rpx;
  margin-bottom: 100rpx;
  text-align: center;
}