/* pages/score_page/score_page.wxss */
.info{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.grade_touxiang{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.grade_nicheng{
  font-size: 35rpx;
}

.bigFont{
  font-size: 40rpx;
  margin-left: 30rpx;
  margin-top: 60rpx;
}

.textCenter{
  text-align: center;
}

.white_block{
  margin: 2% 0% ;
  background-color: white;
  padding: 12rpx 15rpx;
  border-radius: 4%;
}

.scoreColor{
  font-size: 80rpx;
  color: #93D5DC;
}

page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  border-radius: 4rpx;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #93D5DC;
  font-size: 35rpx;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #93D5DC;
}
.list{
  background: #ffffff;
  padding: 10rpx;
  display: flex;
  margin-top: 20rpx;
  border-radius: 4%;
}
.list-img image{
  width: 200rpx;
  height: 200rpx;
}

.list-info{
  padding-left: 20rpx;
  position: relative;
}
.title{
  color: #93D5DC;
  font-size: 35rpx;
  margin-bottom: 14rpx;
}
.info{
  font-size: 26rpx;
  color: #666666;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.info-bottom{
  position: absolute;
  color: rgb(194, 164, 128);
  bottom: 2rpx;
  left: 20rpx;
  font-size: 30rpx;
  flex: 1;
}

.head_2{
  position: absolute;
  left: 30rpx;
  font-size: 25rpx;
}
.head_2::after {
  content: "";
  display: block;
  width: 6rpx;
  height: 20rpx;
  background-color: #93D5DC;
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -10rpx;
  z-index: 1;
}
.end{
  color: #93D5DC;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  text-align: center;
}