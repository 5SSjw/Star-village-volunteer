

.message{
    display: flex;
    flex-direction: row;
    padding: 20rpx 20rpx 40rpx 20rpx;
    border: 3rpx solid #82e2fa;
    border-radius: 10rpx;
  }
  .face-img{
    width: 100rpx;
    height: 100rpx;
  }
  .left{
    margin-right: 35rpx;
  }
  
  .nickname{
    color: rgb(56, 25, 129);
    font-weight: 550;
    font-size: 40rpx;
    margin-bottom: 15rpx;
  }
  
  .time-delete{
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    margin: 10rpx 0rpx 10rpx 0rpx; 
  }
  
  .time{
    color: #7F7F7F;
  }
  
  .delete{
    color: rgb(56, 25, 129);
    margin-left: 20rpx;
  }
  
  .hudong-img{
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
  }
  .hudong-box{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color: #7F7F7F;
    margin: 10rpx 0rpx 10rpx 0rpx; 
  }
  .hudong-cell{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 10rpx;
  }
  
  .images-wrap{
    margin-top: 10rpx;
    margin-left: 30rpx;
  }
  .image-1{
    width: 630rpx;
    height: 550rpx;
  }
  
  
  
  .image-2-3{
    width: 300rpx;
    height: 300rpx;
    margin-right: 20rpx;
  }
  
  .image-4{
    width: 300rpx;
    height: 300rpx;
    margin-right: 6rpx;
  }
  
  .image-5-9{
    width: 200rpx;
    height: 200rpx;
    margin-right: 10rpx;
  }
  
  .prize-box{
    background-color: #f7f7f7;
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    padding: 20rpx 20rpx;
    color: rgb(56, 25, 129);
    font-size: 30rpx;
    border-bottom: 1rpx solid #EDEDED;
  }
  .prize-img{
    width: 30rpx;
    height: 30rpx;
    padding-right: 10rpx;
  }
  
  .comment-box{
    background-color: #f7f7f7;
    padding: 20rpx 20rpx;
    font-size: 30rpx;
  }
  .comment{
    margin-bottom: 20rpx;
  }
  .comment-nickname{
    color: rgb(56, 25, 129);
  }
  
  .head{
    text-align: right;
    margin: 5rpx 20rpx 0rpx 0rpx;
  }
  
  .fabu{
    width: 65rpx;
    height: 55rpx;
  }
  
  .share-button{
    background-color: #fff;
    margin: 0 0;
  }
  
  .share-text{
    font-weight: 150;
    font-size: 28rpx;
  }
  
  .add_icon{
    position: fixed;
    width:42px;
      height:42px;
    bottom: 30px;
    right: 20px;
    }